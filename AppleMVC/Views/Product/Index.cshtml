@model IEnumerable<AppleMVC.Models.ProductDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<style>
    .button-decor {
        border: 1px solid black;
        width: 50px;
    }

    .menu {
        display: inline;
        padding-left: 10px;
        padding-right: 10px;
    }

    .item {
        display: inline;
        font-size: 20px;
        line-height: 0.8;
    }
</style>

<div class="container-fluid mx-sm-6 mx-md-4 mx-lg-3 p-sm-6 p-md-4 p-lg-3">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="div-img-client">
                    <img src="@Url.Content(item.ProductImage)" height="150"/>
                </div>
                <div class="div-des-client">
                    <p>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                        @Html.DisplayFor(modelItem => item.Memory.MemoryName)
                        @Html.DisplayFor(modelItem => item.Color.ColorName)
                    </p>
                    <p>@item.Price.ToString("#, ##0 VND")</p>
                    <p><a href="/ShoppingCart/AddToCart/@item.ProductDetailID" class="btn btn-default button-decor">Buy</a></p>
                </div>
            </div>
        }
    </div>
</div>



