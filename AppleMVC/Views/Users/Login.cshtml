@model AppleMVC.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" />
<style>
    .menu {
        display: inline;
        padding-left: 10px;
        padding-right: 10px;
    }

    .item {
        display: inline;
        font-size: 20px;
        line-height: 0.8;
    }
</style>

<div class="row justify-content-md-center">
    <div class="col-md-4" style="margin-top: 20px;">
        @using (Html.BeginForm("Login", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="card">

                <div class="card-header">
                    <div class="card-title">Đăng nhập</div>
                </div>
                @if (ViewBag.error != null)
                {
                    <span class="text-danger text-center">Sai tên đăng nhập hoặc mật khẩu</span>
                }

                <div class="card-body">
                    <div class="form-group">
                        <label>Tên Đăng Nhập</label>
                        @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "Tên Đăng Nhập" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "badge badge-danger" })

                    </div>
                    <div class="form-group">
                        <label>Mật Khẩu</label>
                        @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control", @placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "badge badge-danger" })

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Đăng nhập</button>
                        <a role="button" href="/Users/Register" class="btn btn-info">Đăng ký</a>
                    </div>

                </div>
            </div>

        }
    </div>
</div>

