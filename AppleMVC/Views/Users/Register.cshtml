@model AppleMVC.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" />
<style>
    .menu {
        display: inline;
        padding-left: 10px;
        padding-right: 10px;
    }

    .item {
        display: inline;
        font-size: 20px;
        line-height: 0.8;
    }
</style>

<div class="row justify-content-md-center">
    <div class="col-md-4" style="margin-top: 20px;">
        @using (Html.BeginForm("Register", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-header">
                    <div class="card-title">Đăng ký tài khoản</div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Họ Và Tên</label>
                        @Html.TextBoxFor(m => m.NameUser, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NameUser, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>UserName</label>
                        @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "badge badge-danger" })
                        @if (ViewBag.error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.error</span>
                        }
                    </div>
                    <div class="form-group">
                        <label>Số Điện Thoại</label>
                        @Html.TextBoxFor(m => m.UserPhone, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserPhone, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.UserEmail, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserEmail, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Mật Khẩu</label>
                        @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <input class="d-none" value="0" name="RoleID" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Đăng ký</button>
                        <a role="button" href="/Users/Login" class="btn btn-info">Đăng nhập</a>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
