@model IEnumerable<AppleMVC.Models.Color>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    h2 {
        background: lightgreen;
        font-size: 50px;
        text-align: center;
        justify-items: center;
    }

    div {
        padding: 5px;
    }
</style>

<h2>QUẢN LÝ MÀU</h2>

<table class="table">
    <tr>
        <th>
            Tên Màu
        </th>
        <th>
            Mã Màu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RGB)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ColorID }, new { @class = "btn btn-sm btn-success" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ColorID }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }

</table>


<div>
    <p>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
    </p>
</div>
